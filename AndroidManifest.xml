<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.georgeee.android.singingintherain"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="@string/app_name" android:icon="@drawable/singing_in_the_rain_icon" android:name=".MyApplication">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".SettingsActivity"
                android:label="@string/settingsTitle"
                android:windowSoftInputMode="stateHidden">
        </activity>

        <service android:name=".UpdateForecastService" android:exported="false">
        </service>
        <receiver android:name=".AlarmBroadcastReceiver">
        </receiver>
    </application>
</manifest>
