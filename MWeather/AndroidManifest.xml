<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.mermakov.projects.MWeather"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <service android:name=".Utils.WeatherIntentService"/>
        <receiver android:name=".Utils.WeatherBroadcastReceiver"/>
        <receiver android:name=".Utils.WeatherUpdater">
            <intent-filter>
                <action android:name="startAlarm"/>
            </intent-filter>
        </receiver>
        <activity android:name="WeatherActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
