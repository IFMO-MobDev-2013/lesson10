<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/sky_2">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Список доступных городов"
                android:id="@+id/textView" android:layout_gravity="center" android:textColor="#a533ff"
                android:textSize="20dp" android:textStyle="bold" android:gravity="center" android:layout_weight="1"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/to_right"
                />
    </LinearLayout>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название города:"
            android:id="@+id/enter_city" android:layout_gravity="center"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/all_cities" android:layout_gravity="center_vertical" android:layout_weight="1"/>
</LinearLayout>