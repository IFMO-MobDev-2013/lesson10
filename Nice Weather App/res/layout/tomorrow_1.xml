<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/sky_2">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/to_left"
                android:layout_gravity="left"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/city" android:layout_gravity="center" android:textColor="#a533ff"
                android:textSize="20dp" android:textStyle="bold" android:gravity="center" android:layout_weight="1"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/to_right"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data" android:textStyle="bold" android:textSize="16dp" android:textColor="#9beba3"
                    android:layout_marginLeft="25dp" android:focusableInTouchMode="false"
                    android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temperature" android:textSize="45dp"
                    android:layout_gravity="left|center_vertical" android:gravity="center" android:textColor="#ffd596"
                    android:textStyle="bold" android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:id="@+id/imageView" android:layout_gravity="center" android:layout_weight="1"
                />
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description" android:textSize="17dp"
            android:textColor="#bcfff3" android:textStyle="bold"
            android:layout_marginRight="30dp" android:gravity="right"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/humidity" android:textSize="16dp"
            android:textColor="#a3cbff" android:textStyle="bold" android:gravity="left"
            android:layout_gravity="left" android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pressure"
            android:textColor="#a3cbff" android:textSize="16dp" android:textStyle="bold" android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wind" android:gravity="center|left" android:textStyle="bold"
            android:textSize="16dp" android:textColor="#a3cbff" android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data1" android:textStyle="bold" android:textSize="16dp" android:textColor="#9beba3"
                    android:layout_marginLeft="25dp" android:focusableInTouchMode="false"
                    android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temperature1" android:textSize="45dp"
                    android:layout_gravity="left|center_vertical" android:gravity="center" android:textColor="#ffd596"
                    android:textStyle="bold" android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:id="@+id/imageView1" android:layout_gravity="center" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description1" android:textSize="17dp"
            android:textColor="#bcfff3" android:textStyle="bold"
            android:layout_marginRight="30dp" android:gravity="right"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/humidity1" android:textSize="16dp"
            android:textColor="#a3cbff" android:textStyle="bold" android:gravity="left"
            android:layout_gravity="left" android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pressure1"
            android:textColor="#a3cbff" android:textSize="16dp" android:textStyle="bold" android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wind1" android:gravity="center|left" android:textStyle="bold"
            android:textSize="16dp" android:textColor="#a3cbff" android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data2" android:textStyle="bold" android:textSize="16dp" android:textColor="#9beba3"
                    android:layout_marginLeft="25dp" android:focusableInTouchMode="false"
                    android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temperature2" android:textSize="45dp"
                    android:layout_gravity="left|center_vertical" android:gravity="center" android:textColor="#ffd596"
                    android:textStyle="bold" android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:id="@+id/imageView2" android:layout_gravity="center" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description2" android:textSize="17dp"
            android:textColor="#bcfff3" android:textStyle="bold"
            android:layout_marginRight="30dp" android:gravity="right"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/humidity2" android:textSize="16dp"
            android:textColor="#a3cbff" android:textStyle="bold" android:gravity="left"
            android:layout_gravity="left" android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pressure2"
            android:textColor="#a3cbff" android:textSize="16dp" android:textStyle="bold" android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wind2" android:gravity="center|left" android:textStyle="bold"
            android:textSize="16dp" android:textColor="#a3cbff" android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

</LinearLayout>