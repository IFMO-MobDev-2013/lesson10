<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/sky_2">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/to_left"
                android:layout_gravity="left"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/city" android:layout_gravity="center" android:textColor="#a533ff"
                android:textSize="20dp" android:textStyle="bold" android:gravity="center" android:layout_weight="1"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/to_right"
                />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginBottom="26dp"
            android:layout_marginTop="24dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/country" android:layout_weight="1" android:textSize="20dp"
                android:textColor="#bcfff3" android:layout_marginLeft="10dp" android:gravity="left"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lust_update" android:layout_weight="2" android:layout_marginRight="10dp"
                android:layout_gravity="center" android:textSize="14dp" android:textColor="#bcfff3"
                android:gravity="right"/>
    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature" android:textSize="60dp"
            android:textStyle="bold" android:textColor="#ffd596"
            android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description" android:layout_marginTop="80dp" android:layout_marginBottom="10dp"
            android:layout_gravity="left|center_vertical" android:textColor="#bcfff3" android:textSize="23dp"
            android:gravity="right" android:layout_marginLeft="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pressure" android:textColor="#a3cbff" android:textSize="22dp" android:gravity="left"
            android:layout_marginTop="10dp" android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidity"
            android:textColor="#a3cbff" android:textSize="22dp"
            android:gravity="left" android:layout_gravity="left|center_vertical" android:layout_marginLeft="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wind" android:textColor="#a3cbff" android:textSize="22dp" android:gravity="bottom|left"
            android:layout_gravity="left|center_vertical" android:layout_marginLeft="50dp"/>
</LinearLayout>