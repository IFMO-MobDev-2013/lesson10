<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityNameText" android:layout_gravity="center" android:hint="Enter the city name here"
            android:layout_marginTop="20dp" android:textSize="20dp"/>
    <Button
            android:layout_width="129dp"
            android:layout_height="57dp"
            android:text="Proceed"
            android:id="@+id/proceedButton" android:layout_gravity="center" android:layout_marginTop="14dp"
            android:textSize="20dp" android:onClick="onProceed"/>
    <Button
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:id="@+id/removeButton" android:layout_gravity="center" android:layout_marginTop="23dp"
            android:textSize="20dp" android:onClick="onRemove"/>
</LinearLayout>