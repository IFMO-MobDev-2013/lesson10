<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<ViewSwitcher
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/viewSwitcher" >

		<ProgressBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:id="@+id/progressBar" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="City"
					android:id="@+id/textView" android:layout_gravity="center" android:textStyle="italic"/>

			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
				<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:text="Temperature"
						android:id="@+id/textView1" android:layout_weight="1" android:textStyle="bold"
						android:textSize="40dp"/>
				<ImageView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/imageView" android:layout_weight="1"/>
			</LinearLayout>

			<Space
					android:layout_width="fill_parent"
					android:layout_height="30dp"
					/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Pressure"
					android:id="@+id/textView2" android:layout_gravity="left|center_vertical"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="PrecipProbability"
					android:id="@+id/textView3" android:layout_gravity="left|center_vertical"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Humidity"
					android:id="@+id/textView4" android:layout_gravity="left|center_vertical"/>

			<Space
				android:layout_width="fill_parent"
				android:layout_height="30dp"
				android:id="@+id/space" />

			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_gravity="left|center_vertical">
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="0dp"
						android:layout_height="fill_parent" android:layout_gravity="center_horizontal|top"
						android:layout_weight="1">
					<TextView
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="First"
							android:id="@+id/textView5" android:layout_gravity="left|center_vertical"/>
					<TextView
							android:layout_width="fill_parent"
							android:layout_height="0dp"
							android:text="First_temp"
							android:id="@+id/textView8" android:layout_gravity="left|center_vertical"
							android:layout_weight="1"/>
					<ImageView
							android:layout_width="fill_parent"
							android:layout_height="0dp"
							android:id="@+id/imageView1" android:layout_gravity="left|center_vertical"
							android:layout_weight="1"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="0dp"
						android:layout_height="fill_parent" android:layout_weight="1">
					<TextView
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="Second"
							android:id="@+id/textView6" android:layout_gravity="left|center_vertical"/>
					<TextView
							android:layout_width="fill_parent"
							android:layout_height="0dp"
							android:text="Second_temp"
							android:id="@+id/textView9" android:layout_gravity="left|center_vertical"
							android:layout_weight="1"/>
					<ImageView
							android:layout_width="fill_parent"
							android:layout_height="0dp"
							android:id="@+id/imageView2" android:layout_gravity="left|center_vertical"
							android:layout_weight="1"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="vertical"
						android:layout_width="0dp"
						android:layout_height="fill_parent" android:layout_weight="1">
					<TextView
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="Third"
							android:id="@+id/textView7" android:layout_gravity="left|center_vertical"/>
					<TextView
							android:layout_width="fill_parent"
							android:layout_height="0dp"
							android:text="Third_temp"
							android:id="@+id/textView10" android:layout_gravity="left|center_vertical"
							android:layout_weight="1"/>
					<ImageView
							android:layout_width="fill_parent"
							android:layout_height="0dp"
							android:id="@+id/imageView3" android:layout_gravity="left|center_vertical"
							android:layout_weight="1"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ViewSwitcher>

</LinearLayout>