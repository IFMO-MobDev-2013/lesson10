<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/hliex_imageView" android:layout_gravity="left|center_vertical"/>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="167dp"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/hliex_imageView" android:layout_alignTop="@+id/hliex_imageView"
                  android:layout_marginLeft="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="summary"
                android:id="@+id/hliex_summary"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/realTempLabel"
                android:id="@+id/hliex_realTemp"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/apparentTempLabel"
                android:id="@+id/hliex_apparentTemp"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/windSpeedLabel"
                android:id="@+id/hliex_windSpeed"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/pressureLabel"
                android:id="@+id/hliex_pressure"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>
</RelativeLayout>