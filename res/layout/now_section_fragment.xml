<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:background="@drawable/rain"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/realTempLabel"
            android:id="@+id/realTemp"
            android:layout_alignLeft="@+id/imageView" android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feelsTempLabel"
            android:id="@+id/feelsTemp"
            android:layout_alignLeft="@+id/realTemp" android:layout_below="@+id/realTemp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/windTempLabel"
            android:id="@+id/windTemp"
            android:layout_alignLeft="@+id/feelsTemp" android:layout_below="@+id/feelsTemp"
            android:layout_marginTop="10dp"/>
</RelativeLayout>