<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:id="@+id/textcity" android:layout_gravity="center" android:textSize="24dp"
            />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editCity" android:layout_gravity="center" android:textSize="24dp"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:id="@+id/textcountry" android:layout_gravity="center" android:textSize="24dp"
            />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editCountry" android:layout_gravity="center" android:textSize="24dp"
            />
    <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/space" android:layout_weight="50"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/find"
            android:id="@+id/buttonFind" android:layout_gravity="center" android:textSize="24dp"
            />
</LinearLayout>