<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/wliex_imageView" android:layout_gravity="left|center_vertical"/>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="167dp"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/wliex_imageView" android:layout_alignTop="@+id/wliex_imageView"
                  android:layout_marginLeft="10dp" android:layout_alignParentRight="true">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="summary"
                android:id="@+id/wliex_summary"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/realTempLabelRange"
                android:id="@+id/wliex_realTemp"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/apparentTempLabelRange"
                android:id="@+id/wliex_apparentTemp"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/windSpeedLabel"
                android:id="@+id/wliex_windSpeed"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/pressureLabel"
                android:id="@+id/wliex_pressure"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>
</RelativeLayout>