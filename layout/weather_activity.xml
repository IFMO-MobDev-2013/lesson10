    >
    <RelativeLayout
        android:id="@+id/current_cond_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"

        >
        <TextView
            android:id="@+id/current_cond_weather_desc_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/current_cond_weather_desc_text_size"
            android:textColor="@color/text"
            android:gravity="center"
            android:layout_alignParentTop="true"

            android:text="@string/no_weather"
            />

        <TextView
            android:id="@+id/current_cond_temp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/current_cond_temp_and_icon_size"
            android:textColor="@color/text"
            android:gravity="center"

            android:layout_below="@+id/current_cond_weather_desc_text_view"
            android:layout_centerHorizontal="true"
            />



        <ImageView
            android:id="@+id/current_cond_icon_image_view"
            android:layout_width="@dimen/current_cond_temp_and_icon_size"
            android:layout_height="@dimen/current_cond_temp_and_icon_size"
            android:layout_toRightOf="@id/current_cond_temp_text_view"
            android:layout_alignBottom="@id/current_cond_temp_text_view"
            android:layout_below="@id/current_cond_weather_desc_text_view"

            />




        </RelativeLayout>


