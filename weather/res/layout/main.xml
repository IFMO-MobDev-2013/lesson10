<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"

        >
    <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editcity" android:layout_gravity="center|left" android:textSize="35dp"
                android:layout_weight="9" android:maxLines="2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/addcity" android:layout_gravity="center_vertical|right" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мои города"
            android:id="@+id/mycities" android:layout_gravity="center" android:textSize="35dp"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_gravity="center"/>
</LinearLayout>

